/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 
a {
  color: #FF4949;
}

button.red-btn {
  background-color: #FF4949;
  color: #fff;
}

button.red-btn:active,
button.red-btn.button-hover {
  background-color: #ee4949;
  color: #fff;
}

button[disabled].red-btn,
button[disabled].red-btn:active {
  background-color: #eee;
  color: #aaa;
}
/*列表*/
.zh-list {
  border-top: 1px solid #f3f3f3;
}
.zh-list-item {
  height: 24px;
  line-height: 24px;
  font-size: 14px;
  padding: 10px;
  border-bottom: 1px solid #f3f3f3;
}
.zh-list-item .icon {
  height: 16px;
  width: 16px;
  margin-right: 10px;
  float: left;
  margin-top: 3px;
}
.zh-list-item .icon-right {
  float: right;
  margin-top: 6px;
}

.zh-list-item.list-item-link:active {
  background-color: #f3f3f3;
}

/*icon*/
.icon-right {
  width: 12px;
  height: 12px;
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
  transform: rotate(45deg);
}

.page-title {
  padding: 20rpx 50rpx;
  font-size: 16px;
  line-height: 1.5;
  border-bottom: 1rpx solid #fafafa;
}

.article-item {
  padding: 30rpx 20rpx;
  margin: 0 30rpx;
  border-bottom: 1rpx solid #d3d3d3;
}
.article-item .info {
  overflow: hidden;
}
.article-item .username,
.article-item .sort,
.article-item .time {
  font-size: 12px;
  line-height: 20px;
  margin-top:  5px;
  display: block;
  color: #aaa;
}
.article-item .username,
.article-item .sort {
  float: left;
  margin-right: 10px;
}
.article-item .time {
  float: right;
}
.article-item .desc,
.article-item .desc-with-pic,
.article-item .desc-with-pics {
  font-size: 14px;
  line-height: 1.5;
  color: #666;
  padding: 10px 0;
}

.article-item .desc-with-pic {
  position: relative;
  padding-right: 300rpx;
}
.article-item .desc-with-pic .desc-img {
  width: 280rpx;
  height: 200rpx;
  position: absolute;
  right: -10rpx;
  top: 10px;
}
.article-item .desc-with-pics .desc-pics {
  display: flex;
}
.article-item .desc-with-pics .desc-img {
  flex: 1;
  padding: 20rpx 10rpx;
}

.article-item .title {
  display: block;
  font-size: 34rpx;
  margin-bottom: 10px;
  padding: 10px 0 0;
  color:#4b4b4b;
}
.article-item.article-info {
  background-color: transparent;
}
.article-item .article-item {
  border-left: 1px solid #666;
  background-color: #eee;
  margin: 10px 0;
}
.read-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 14px;
  color: #aaa;
}
.error {
  background-color:#ff0;
  text-align:center;
  padding:10px 0;
  color:#a00;
  font-size:14px;
}

.article-comment-item {
  background-color:#f3f3f3;
  padding:20rpx;
  margin:10px;
  border:1px solid #eee;
  box-shadow:8rpx 8rpx 1px #ccc;
}