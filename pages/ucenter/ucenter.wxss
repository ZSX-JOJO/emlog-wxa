/* ucenter.wxss */
.userinfo {
  padding: 40rpx;
  border-top: 1rpx solid #eee;
  background: #378CC2;
}
.userinfo .avatar {
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin-right: 15px;
  background-color: #fafafa;
}
.userinfo .nickname,
.userinfo .gender {
  font-size: 14px;
  color: #fff;
}
.userinfo .gender {
  display: block;
  margin-top: 10px;
}

.copyright {
  text-align: center;
  padding: 20px 0;
  font-size: 24rpx;
  color: #666;
}