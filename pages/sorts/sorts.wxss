/* pages/sorts/sorts.wxss */
.sorts {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}
.sorts-item {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx;
  vertical-align: top;
}
.sorts-item .item-link {
  border: 1px solid #eee;
  padding: 20rpx;
  position: relative;
  height: 100%;
  box-sizing: border-box;
  background: #fafafa;
}
.sorts-item .title {
  font-size: 40rpx;
  padding-right: 50rpx;
}
.sorts-item .desc {
  font-size: 30rpx;
  margin-top: 1em;
  color: #666;
}
.sorts-item .num {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}