/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 140rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.blog-info {
  font-size: 14px;
  text-align: center;
  margin-top: 140rpx;
  color: #aaa;
}

.entry-blog {
  margin-top: 140rpx;
  text-align: center;
}
.entry-blog .red-btn,
.entry-blog .normal-btn {
  width: 30%;
  display: inline-block;
  margin: 0 10px;
}

.entry-blog .normal-btn {
  background-color: #f3f3f3;
}